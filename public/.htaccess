# Portfólio Diógenes Martins - Configurações HostGator
# Última atualização: 2025

# ==========================================
# REDIRECIONAMENTO PARA REACT/NEXT.JS ROUTES
# ==========================================
RewriteEngine On
RewriteBase /

# Redirect all requests to index.html for SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(.*)$ /index.html [L,QSA]

# ==========================================
# FORÇAR HTTPS (SEGURANÇA)
# ==========================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ==========================================
# CACHE DE ARQUIVOS ESTÁTICOS
# ==========================================
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Cache HTML por 1 hora
  ExpiresByType text/html "access plus 1 hour"
  
  # Cache CSS e JS por 1 mês
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  
  # Cache imagens por 6 meses
  ExpiresByType image/png "access plus 6 months"
  ExpiresByType image/jpg "access plus 6 months"
  ExpiresByType image/jpeg "access plus 6 months"
  ExpiresByType image/gif "access plus 6 months"
  ExpiresByType image/svg+xml "access plus 6 months"
  ExpiresByType image/webp "access plus 6 months"
  ExpiresByType image/avif "access plus 6 months"
  
  # Cache fontes por 1 ano
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# ==========================================
# COMPRESSÃO GZIP
# ==========================================
<IfModule mod_deflate.c>
  # Comprimir HTML, CSS, JavaScript, Text, XML e fontes
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/ld+json
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
  
  # Não comprimir imagens (já são comprimidas)
  SetEnvIfNoCase Request_URI \
    \.(?:gif|jpe?g|png|webp|avif)$ no-gzip dont-vary
</IfModule>

# ==========================================
# HEADERS DE SEGURANÇA
# ==========================================
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # XSS Protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Content Type Protection
  Header always set X-Content-Type-Options "nosniff"
  
  # Referrer Policy
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Cache control para arquivos estáticos
  <FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # Cache control para HTML
  <FilesMatch "\.html$">
    Header set Cache-Control "public, max-age=3600"
  </FilesMatch>
</IfModule>

# ==========================================
# MIME TYPES PARA FONTES E ARQUIVOS MODERNOS
# ==========================================
<IfModule mod_mime.c>
  # Fontes Web
  AddType font/woff .woff
  AddType font/woff2 .woff2
  AddType application/font-woff .woff
  AddType application/font-woff2 .woff2
  
  # Arquivos JavaScript modernos
  AddType application/javascript .js .mjs
  AddType application/json .json
  
  # Imagens modernas
  AddType image/webp .webp
  AddType image/avif .avif
  AddType image/svg+xml .svg
</IfModule>

# ==========================================
# PROTEÇÃO CONTRA HOTLINKING
# ==========================================
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?diogenesmartins\.dev [NC]
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?seudominio\.com\.br [NC]
RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|avif)$ [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp|avif)$ - [F]

# ==========================================
# OTIMIZAÇÕES DE PERFORMANCE
# ==========================================

# Remover ETag (melhor usar Cache-Control)
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Prefetch DNS para recursos externos
<IfModule mod_headers.c>
  Header add Link "<https://fonts.googleapis.com>; rel=dns-prefetch"
  Header add Link "<https://cdnjs.cloudflare.com>; rel=dns-prefetch"
  Header add Link "<https://api.openai.com>; rel=dns-prefetch"
</IfModule>

# ==========================================
# REDIRECIONAMENTOS ÚTEIS
# ==========================================

# Redirecionar www para não-www (se preferir)
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirecionar páginas antigas (exemplo)
# Redirect 301 /old-page /new-page

# ==========================================
# PROTEÇÃO CONTRA ACESSO DIRETO A ARQUIVOS
# ==========================================

# Proteger arquivos de configuração
<FilesMatch "\.(env|json|md|lock|log)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Proteger pasta node_modules se existir
RedirectMatch 404 /node_modules/

# ==========================================
# CONFIGURAÇÕES ESPECÍFICAS DO NEXT.JS
# ==========================================

# Suporte para arquivos _next
<IfModule mod_rewrite.c>
  RewriteRule ^_next/static/(.*)$ /_next/static/$1 [L]
</IfModule>

# Headers específicos para arquivos Next.js
<FilesMatch "^(_next|static)/">
  <IfModule mod_headers.c>
    Header set Cache-Control "public, max-age=31536000, immutable"
  </IfModule>
</FilesMatch>

# ==========================================
# MONITORAMENTO E LOGS
# ==========================================

# Log de erros personalizados (opcional)
# ErrorLog /path/to/your/error.log
# CustomLog /path/to/your/access.log combined

# ==========================================
# CONFIGURAÇÕES FINAIS
# ==========================================

# Charset padrão
AddDefaultCharset UTF-8

# Seguir links simbólicos
Options +FollowSymLinks

# Desabilitar assinatura do servidor
ServerSignature Off